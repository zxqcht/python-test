a=input("请输入前十五位银联卡号:")

b=','.join(a)

c=b.split(",")

x=[]

e=r=0

q=[]

d=[int(j) for j in c]

for i in range(0,15,2):

    z=d[i]*2

    x.append(z)

for i in range(0,8):

    if x[i]>=10:

        w=x[i]%10+x[i]//10

        q.append(w)

    else:

        q.append(x[i])

for i in range(0,8):

    e=q[i]+e

for i in range(1,15,2):

    r=d[i]+r

t=e+r

y=10-t%10

print("检查代码为",y)

d.append(y)

d=[str(i) for i in d]

h=''.join(d)

print("银联卡号为:",h)
